{
  "compilerOptions": {
    "lib": ["es6", "DOM"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*.*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
